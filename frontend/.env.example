# MediXScan Frontend Environment Variables Example
# Copy this to `.env.local` and fill in your specific values
# DO NOT COMMIT REAL VALUES TO VERSION CONTROL

# ===== DEVELOPMENT ENVIRONMENT =====
# Backend API Configuration
VITE_API_URL=http://localhost:8000
VITE_FRONTEND_URL=http://localhost:5173

# ===== PORT DETECTION & CONNECTION =====
# Enable automatic port detection (true/false)
VITE_ENABLE_PORT_DETECTION=true

# Custom port range for detection (comma-separated)
VITE_DEFAULT_PORTS=5173,5174,5175,3000,3001

# Network addresses for multi-device development (comma-separated)
VITE_NETWORK_ADDRESSES=http://172.19.0.1:5173,http://192.168.0.104:5173

# Connection timeout in milliseconds
VITE_CONNECTION_TIMEOUT=3000

# Fallback URL when all detection fails
VITE_FALLBACK_URL=http://localhost:5173

# ===== STAGING ENVIRONMENT =====
# Uncomment and fill these for staging deployment
# VITE_STAGING_API_URL=https://staging-api.medixscan.railway.app
# VITE_STAGING_FRONTEND_URL=https://staging.medixscan.vercel.app

# ===== PRODUCTION ENVIRONMENT =====
# Uncomment and fill these for production deployment
# VITE_PROD_API_URL=https://api.medixscan.railway.app
# VITE_PROD_FRONTEND_URL=https://medixscan.vercel.app

# ===== FEATURE FLAGS =====
# Enable role switcher in UI (true/false)
VITE_ENABLE_ROLE_SWITCHER=true

# Enable debug mode (true/false)
VITE_DEBUG=true

# Set log level (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# Environment mode (development, staging, production)
VITE_ENV=development

# ===== REPORT CORRECTION SPECIFIC =====
# Custom URLs for report correction system (optional - will use defaults if not set)
# VITE_REPORT_CORRECTION_URL=http://localhost:5173/radiology/report-correction
# VITE_RADIOLOGY_DASHBOARD_URL=http://localhost:5173/radiology/dashboard
# VITE_ANONYMIZER_URL=http://localhost:5173/radiology/anonymizer

# ===== API CONFIGURATION =====
# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# API retry attempts
VITE_API_RETRY_ATTEMPTS=3

# Enable mock data mode (true/false)
VITE_MOCK_DATA=false

# ===== ANALYTICS & MONITORING =====
# Analytics tracking ID (if using analytics)
# VITE_ANALYTICS_ID=your-analytics-id

# Error reporting service URL (if using error reporting)
# VITE_ERROR_REPORTING_URL=https://your-error-service.com

# ===== DEPLOYMENT SPECIFIC =====
# CDN URL for assets (if using CDN)
# VITE_CDN_URL=https://cdn.medixscan.com

# Base path for deployment (if deploying to subdirectory)
# VITE_BASE_PATH=/

# ===== DEVELOPMENT TOOLS =====
# Enable React DevTools in production (true/false)
VITE_REACT_DEVTOOLS=true

# Enable Redux DevTools (true/false)  
VITE_REDUX_DEVTOOLS=true

# Hot reload configuration
VITE_HMR=true

# ===== SECURITY =====
# CORS origins (comma-separated)
# VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Allowed hosts (comma-separated)
# VITE_ALLOWED_HOSTS=localhost,127.0.0.1,.medixscan.com

# ===== EXAMPLE VALUES FOR REFERENCE =====
# Development
# VITE_API_URL=http://localhost:8000
# VITE_FRONTEND_URL=http://localhost:5173

# Staging  
# VITE_API_URL=https://staging-api.medixscan.railway.app
# VITE_FRONTEND_URL=https://staging.medixscan.vercel.app

# Production
# VITE_API_URL=https://api.medixscan.railway.app  
# VITE_FRONTEND_URL=https://medixscan.vercel.app