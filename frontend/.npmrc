# Force npm to use legacy peer dependency resolution
legacy-peer-deps=true

# Prevent automatic package updates that might break compatibility
save-exact=false
package-lock=true

# Use exact versions for critical dependencies
exact=false

# Soft-coded environment configuration
# Suppress SASS deprecation warnings in CI/CD environments
SASS_SILENCE_DEPRECATIONS=legacy-js-api,import,global-builtin,color-functions
SASS_QUIET_DEPS=1

# Node.js memory optimization for large SASS builds
NODE_OPTIONS=--max-old-space-size=4096